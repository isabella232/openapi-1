{
  "name": "@zeit/open-api-ui",
  "version": "0.0.0",
  "description": "UI for the OpenApi Spec",
  "main": "index.js",
  "scripts": {
    "dev": "now dev",
    "now-build": "yarn build",
    "build": "yarn build:copy-assets && yarn build:swagger && yarn build:js && yarn build:css",
    "build:swagger": "cpx '../swagger.yaml' build/",
    "build:copy-assets": "cpx 'src/{index.html,favicon.ico}' build/",
    "build:css": "postcss src/index.css -o build/bundle.css",
    "build:js": "browserify src/index.js -o build/bundle.js",
    "clean": "rimraf build"
  },
  "keywords": ["openapi", "zeit"],
  "author": "Javi Velasco <javi@zeit.co>",
  "license": "MIT",
  "dependencies": {
    "browserify": "16.2.3",
    "cpx": "1.5.0",
    "postcss": "7.0.17",
    "postcss-cli": "6.1.2",
    "postcss-import": "12.0.1",
    "postcss-url": "8.0.0",
    "swagger-ui": "3.22.3"
  }
}
